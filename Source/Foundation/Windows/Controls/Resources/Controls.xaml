<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Microsoft.Tools.TeamMate.Foundation.Windows.Controls;assembly=Microsoft.Tools.TeamMate.Foundation">

    <FontFamily x:Key="SegoeMdl2AssetsFont">pack://application:,,,/Microsoft.Tools.TeamMate.Foundation;component/Resources/Fonts/#Segoe MDL2 Assets</FontFamily>

    <!--  The default style applied to buttons hosted in a ButtonPanel  -->
    <Style x:Key="ButtonPanelButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="6,0,6,0" />
        <Setter Property="MinWidth" Value="73" />
        <Setter Property="MinHeight" Value="21" />
    </Style>

</ResourceDictionary>
