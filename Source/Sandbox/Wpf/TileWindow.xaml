<Window x:Class="Microsoft.Tools.TeamMate.Sandbox.Wpf.TileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        UseLayoutRounding="True"
        xmlns:local="clr-namespace:Microsoft.Tools.TeamMate.Sandbox.Wpf"
        Title="TileWindow" Height="499" Width="477">
    <Grid>
        <ItemsControl Margin="6" Focusable="False">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" Orientation="Vertical"></WrapPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.Items>
                <local:Tile/>
                <local:Tile/>
                <local:Tile/>
            </ItemsControl.Items>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Panel.Margin" Value="0,0,4,4"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
    </Grid>
</Window>
